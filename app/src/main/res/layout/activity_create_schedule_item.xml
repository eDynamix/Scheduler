<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedulerScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CreateScheduleItemActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="14"
        android:layout_gravity="top">
        <Button
            android:id="@+id/schedulerBack"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/back"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/black"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/scheduleTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/scheduler_edittext_background"
            android:hint="@string/enter_title"
            android:textSize="20sp"
            android:inputType="text"
            android:maxLines="1"
            android:layout_weight="1"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:fillViewport="true">
            <EditText
                android:id="@+id/scheduleDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLength="240"
                android:gravity="top"
                android:hint="@string/enter_description"
                android:background="@drawable/scheduler_edittext_background"/>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="5"
            android:weightSum="5"
            android:background="@drawable/scheduler_edittext_background">
            <Button
                android:id="@+id/schedulerDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pick_date"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/black"
                android:layout_margin="10dp"
                android:layout_weight="3"/>
            <Button
                android:id="@+id/schedulerDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/btn_background"
                android:layout_weight="1"/>
            </LinearLayout>
    </LinearLayout>
</ScrollView>